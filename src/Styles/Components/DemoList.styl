.demo__link {
  @extend .card__link;
  white-space: pre-wrap;

  .demo__link__column {
    position: relative;

    .h3 {
      displayFont();
      margin-bottom: 0;
    }

    &:first-of-type {
      padding: rem(10);
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      width: 100%;

      +min-screen($media-small) {
        padding: rem(20);
      }
    }
  }

  .demo__image__wrapper {
    .demo__image {
      width: 100%;
    }
  }

  .demo__heart-container {
    display: flex;

    .icon {
      padding-right: rem(5);
    }

    .demo__heart__quantity {
      bodyFont($secondary);
    }
  }
}