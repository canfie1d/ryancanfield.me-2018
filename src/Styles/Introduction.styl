.introduction {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: "calc(100% - %s)" % rem(80);
  padding: rem(20);
  background: $primary-dark;

  +min-screen($media-small) {
    height: 100%;
    padding: rem(60);
  }
  
  .h2 {
    max-width: rem(259);
    
    +min-screen($media-small) {
      max-width: rem(502);
    }
  }
}
