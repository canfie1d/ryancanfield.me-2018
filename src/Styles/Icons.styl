// Base icon styles

// *******************************************
// *******************************************

// <span class="icon [icon--[name] icon--rotate-[val] icon--[color]]">
//     <svg />
// </span>

.icon {
  display: block;
  width: rem(25);
  height: @width;
  background: transparent;
  fill: $black;
  pointer-events: none;
}

// size modifiers
.icon--x-small {
  width: rem(10);
  height: @width;
}

.icon--small {
  width: rem(15);
  height: @width;
}

.icon--medium {
  width: rem(20);
  height: @width;
}

.icon--large {
  width: rem(30);
  height: @width;
}

.icon--x-large {
  width: rem(40);
  height: @width;
}

// rotation modifiers
.icon--rotate-45 {
  transform: rotate(45deg);
}

.icon--rotate-90 {
  transform: rotate(90deg);
}

.icon--rotate-180 {
  transform: rotate(180deg);
}

.icon--rotate-270 {
  transform: rotate(270deg);
}

// color modifiers
.icon--black {
  fill: $black;
}

.icon--white {
  fill: $white;
}

.icon--primary {
  fill: $primary;
}

.icon--secondary {
  fill: $secondary;
}

.icon--tertiary {
  fill: $tertiary;
}
