.contact-card {
  margin: rem(60) auto;
  box-shadow: 2px 2px 4px rgba($black, .2);
  border: 1px solid shade($white, 3%);
  padding: rem(60);
  background: $off-white;
  opacity: 0;

  &.contact-card--inView {
    animation: 500ms aos ease;
    animation-fill-mode: forwards;
  }

  .h3 {
    max-width: rem(700);
    font-size: rem(24);
    margin: 0 auto rem(60);
  }

  .contact-card__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    max-width: rem(700);
    margin: auto;

    .contact-card__item {
      flex: 1 1 auto;
      display: flex;
      justify-content: center;
      margin-bottom: rem(60);

      &.contact-card__item__email {
        flex: 0 0 100%;

        .a {
          display: flex;
          justify-content: space-around;
          align-items: center;
          font-family: $work-bold;
          background: $secondary;
          text-decoration: none;
          padding: rem(20 40);
          text-transform: uppercase;
          color: $white;
        }

        .icon {
          margin-right: rem(10);
        }

      }
    }
  }

}
