.contact-card {
  margin: rem(60) auto;
  box-shadow: 2px 2px 4px rgba($black, .2);
  border: 1px solid;
  border-top-color: tint($tertiary, 80%);
  border-right-color: tint($tertiary, 30%);
  border-bottom-color: tint($tertiary, 40%);
  border-left-color: tint($tertiary, 50%);
  padding: rem(60);
  background: $off-white;

  .h3 {
    displayFont();
    max-width: rem(700);
    margin: 0 auto rem(60);
    text-align: center;
    line-height: 1.5;
  }

  .contact-card__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    max-width: rem(700);
    margin: auto;

    .contact-card__item {
      flex: 1 1 auto;
      display: flex;
      justify-content: center;
      margin-bottom: rem(60);
      transform: scale(1);
      transition: transform 200ms ease-out;

      &:hover {
        transform: scale(1.1);

      }

      .button {
        display: flex;
        justify-content: space-around;
        align-items: center;
        bodyFontBold();
        background: $secondary;
        text-decoration: none;
        box-shadow: 2px 2px 4px rgba($black, .2);
        padding: rem(20 20);
        text-transform: uppercase;
        color: $white;
        transition: box-shadow 200ms ease-out,
                    background 200ms ease-out;

        &:hover {
          outline: none;
          box-shadow: 2px 2px 6px rgba($black, .2);
          background: shade($secondary, 10%);
        }

        +min-screen($media-small) {
          padding: rem(20 40);
        }
      }

      &.contact-card__item__email {
        flex: 0 0 100%;

        .icon {
          margin-right: rem(10);
        }

      }
    }
  }

}
