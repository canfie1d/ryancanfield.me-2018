.client__list {

  .client__item {
    position: relative;
    display: inline-block;
    background: $primary;
    margin-bottom: rem(10);
    padding: rem(10);
    bodyFont($white);
    text-shadow: 0 0 0 $white;
    font-size: rem(12);
    text-transform: uppercase;

    &:not(:last-of-type) {
      margin-right: rem(10);
    }

    &.client__item--hasLink {
      padding: 0;
    }

    +min-screen($media-small) {
      padding: rem(10 30);
    }
  }

  .client__link {
    display: block;
    padding: rem(10);
    bodyFont($white);
    text-shadow: 0 0 0 $white;
    text-decoration: none;

    +min-screen($media-small) {
      padding: rem(10 30);
    }
  }

}

.open-source__list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

  .open-source__item {
    display: flex;
    flex-wrap: wrap;
    margin: rem(20) 0 0;
    padding-bottom: rem(20);
    flex: 1 0 100%;

    &:not(:last-of-type) {
      border-bottom: 2px solid $tertiary;
    }

    .open-source__header {
      flex: 0 0 100%;

      .h4 {
        color: tint($primary, 30%);
      }
    }

    a {
      flex: 0 0 auto;
      transform: scale(1);
      transition: transform 200ms ease-out;

      &:not(:last-of-type) {
        margin-right: rem(60);
      }

      &:hover {
        outline: none;
        transform: scale(1.1);
      }
    }
  }
}