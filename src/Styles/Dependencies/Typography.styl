.h1 {
  displayFontBold();
  line-height: 1.2;
  font-size: rem(28);
  color: $white;
  
  +min-screen($media-small) {
    font-size: rem(42);
  }

  +min-screen($media-medium) {
    font-size: rem(56);
  }
}

.h2 {
  displayFont();
  font-size: rem(24);
  line-height: 1.2;
  color: $white;
  
  +min-screen($media-small) {
    font-size: rem(40);
  }

  +min-screen($media-medium) {
    font-size: rem(52);
  }
}

.h3 {
  displayFontBold();
  font-size: rem(20);
  line-height: 1.2;
  margin-bottom: rem(20);
}

.p {
  bodyFont();
  font-size: rem(18);
  max-width: rem(700);
  line-height: 1.5;
  
  &:not(:last-child) {
    margin-bottom: rem(60);
  }
}

.a {
  color: $secondary;
  text-decoration-skip: skip;
  white-space: nowrap;
  cursor: pointer;
  cursor: url(./Assets/Images/pointer.png) 2 2, pointer;
  
  &:hover,
  &:focus {
    outline: 1px solid $primary;
    outline-offset: 4px;
  }
}
