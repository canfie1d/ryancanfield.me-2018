.l {
  display: flex;
  flex-direction: row-reverse;

  +min-screen($media-small) {
    overflow: hidden;
  }

  .l--leftColumn {
    flex: 1 1 auto;
    overflow-x: hidden;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .l--rightColumn {
    flex: 0 0 auto;
  }
}

.content {
  padding: rem(60 20 80);
  min-height: 100vh;

  +min-screen($media-small) {
    padding: rem(60 40 120);
  }

  +min-screen($media-medium) {
    padding: rem(60 60 120);
  }
}

.content__split {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;

  .content__split__column {
    flex: 1 1 100%;
  }

  +min-screen($media-large) {
    .content__split__column {
      flex: 1 1 50%;

      &:nth-of-type(odd) {
        padding-right: rem(60);
      }

      &:nth-of-type(even) {
        padding-left: rem(60);
      }

      &.content__split__column--full {
        flex: 1 0 100%;
        padding-right: 0;
        padding-left: 0;
      }
    }
  }
}
